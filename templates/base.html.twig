<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="/css/base.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
           
        {% endblock %}
    </head>
    <body>
    <nav>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        
        
            {% if (idParameters is defined) and (app.user.id != idParameters) %}

            <a href="{{ path('profile',{ id: app.user.id}) }}">BoomBlog</a>

            <div class="menu">
                <a href="{{ path('profile',{ id: app.user.id} ) }}">{{app.user.pseudo}}</a>
                <a href="{{ path('logout') }}">Deconnexion</a>
            </div>

            
            {% else %}
                
            <a href="{{ path('profile',{ id: app.user.id}) }}">BoomBlog</a>

            <div class="menu">
            <a href="{{ path('articles')}}">Articles</a>
                <a href="{{ path('profile',{ id: app.user.id} ) }}">{{app.user.pseudo}}</a>
                <a href="{{ path('createArticle')}}">Creer Un Article</a>
                <a href="{{ path('setting')}}"> Parametre</a>
                <a href="{{ path('logout') }}">Deconnexion</a>
            </div>

            {% endif %}

        {% else %}
            
        <a href="{{ path('home') }}">BoomBlog</a>

        <div class="menu">
            <a href=" {{ path('home') }}">Inscription</a>
            <a href=" {{ path('login') }}">connexion</a>
        </div>

        {% endif %}
    </nav>
        {% block body %}{% endblock %}
    </body>
</html>
